# === Core Application Secrets ===
# Generate a random secret: https://generate-secret.vercel.app/32 or `openssl rand -base64 32`
NEXTAUTH_SECRET=****
NEXTAUTH_URL=http://localhost:3000

# Primary Postgres connection used by Prisma + NextAuth (Supabase)
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/postgres

# Legacy Neon database used for data export during migration (optional for new setups)
NEON_DATABASE_URL=postgresql://user:password@neon-host/db
# Destination Supabase database; defaults to DATABASE_URL when omitted
SUPABASE_DATABASE_URL=postgresql://user:password@supabase-host/db

# Optional email provider for passwordless auth (leave unset to disable)
AUTH_EMAIL_SERVER="smtp://user:password@smtp.example.com:587"
AUTH_EMAIL_FROM=notifications@example.com

# Optional OAuth providers (examples)
GITHUB_CLIENT_ID=****
GITHUB_CLIENT_SECRET=****

# AI Gateway API Key (required for non-Vercel deployments)
AI_GATEWAY_API_KEY=****

# Storage (optional)
BLOB_READ_WRITE_TOKEN=****

# Redis (optional, used for resumable streams)
REDIS_URL=****

# Seed helpers (optional overrides when running `pnpm db:seed`)
SEED_USER_EMAIL=seed@example.com
SEED_USER_PASSWORD=password123
