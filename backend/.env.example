# Database
POSTGRES_URL=postgresql+asyncpg://user:password@localhost:5432/chatbot_db
POSTGRES_URL_SYNC=postgresql://user:password@localhost:5432/chatbot_db

# Authentication
JWT_SECRET_KEY=your-secret-key-change-this-in-production
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30

# AI/LLM - OpenAI
OPENAI_API_KEY=sk-your-openai-api-key

# AI/LLM - Azure OpenAI
AZURE_API_KEY=your-azure-openai-api-key
AZURE_API_BASE=https://your-resource-name.openai.azure.com
AZURE_API_VERSION=2024-02-15-preview

# AI/LLM - Model Prefix (azure/, openai/, anthropic/, etc.)
# This determines which provider is used for LLM calls
MODEL_PREFIX=azure/

# Legacy (deprecated)
XAI_API_KEY=your-xai-api-key
AI_GATEWAY_URL=https://api.vercel.com/v1/ai/gateway

# Application
ENVIRONMENT=development
CORS_ORIGINS=http://localhost:3000,http://localhost:3001

# Vercel Blob (for file uploads)
BLOB_READ_WRITE_TOKEN=your-blob-token

# For temporary routing of chat stream to Next.js
NEXTJS_URL=http://localhost:3001

INTERNAL_API_SECRET=dev-internal-secret-change-in-production

# NEXT_PUBLIC_DISABLE_AUTH in frontend .env must also be set
DISABLE_AUTH=false

# MCP Server
MCP_SERVER_URL=https://ai4data-ai4data-mcp.hf.space/gradio_api/mcp/sse
MCP_SSL_VERIFY=false
MCP_TIMEOUT=30.0
